#include <stdio.h>
#include <string.h>

int main() {
    char input[200], output[400];
    int i, j = 0, count = 0;

    printf("Enter the bit stream (e.g., 011111101010): ");
    scanf("%s", input);

    int len = strlen(input);

    for (i = 0; i < len; i++) {
        output[j++] = input[i];

        if (input[i] == '1') {
            count++;
            if (count == 5) {
                output[j++] = '0';  // insert a 0 after five consecutive 1s
                count = 0;          // reset counter
            }
        } else {
            count = 0; // reset when a 0 is found
        }
    }

    output[j] = '\0'; // null-terminate the output string

    printf("\nOriginal Bit Stream : %s", input);
    printf("\nBit Stuffed Stream  : %s\n", output);

    return 0;
}
