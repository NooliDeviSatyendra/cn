#include <stdio.h>

#define MAX 10
#define INF 9999

int main() {
    int cost[MAX][MAX], dist[MAX][MAX], next[MAX][MAX];
    int nodes, i, j, k;
    
    printf("Enter number of nodes: ");
    scanf("%d", &nodes);

    printf("Enter cost matrix (use 9999 for no direct link):\n");
    for (i = 0; i < nodes; i++) {
        for (j = 0; j < nodes; j++) {
            scanf("%d", &cost[i][j]);
            dist[i][j] = cost[i][j];
            next[i][j] = j;
        }
    }

    // Distance vector algorithm (like Bellman-Ford for all nodes)
    for (k = 0; k < nodes; k++) {
        for (i = 0; i < nodes; i++) {
            for (j = 0; j < nodes; j++) {
                if (dist[i][j] > dist[i][k] + dist[k][j]) {
                    dist[i][j] = dist[i][k] + dist[k][j];
                    next[i][j] = next[i][k];
                }
            }
        }
    }

    // Display routing tables
    for (i = 0; i < nodes; i++) {
        printf("\nRouting table for node %d:\n", i + 1);
        printf("Destination\tNext Hop\tDistance\n");
        for (j = 0; j < nodes; j++) {
            if (i != j) {
                printf("%d\t\t%d\t\t%d\n", j + 1, next[i][j] + 1, dist[i][j]);
            }
        }
    }

    return 0;
}
